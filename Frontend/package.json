{
  
    "name": "nexhacks26-chat",
    "displayName": "NexHacks26 Chat",
    "description": "Cursor-style sidebar chat webview that calls a local FastAPI backend.",
    "version": "0.0.1",
    "publisher": "nexhacks26",
    "categories": ["Other"],
  

    "engines": {
      "vscode": "^1.85.0"
    },
  
    
    "activationEvents": [
      "onView:nexhacks26.chatView",
      "onCommand:nexhacks26.openChat"
    ],
  
  
    "main": "./out/extension.js",
  
  
    "contributes": {
 
      "commands": [
        {
          "command": "nexhacks26.openChat",
          "title": "NexHacks26: Focus Chat"
        }
      ],
  
 
      "viewsContainers": {
        "activitybar": [
          {
            "id": "nexhacks26Container",
            "title": "NexHacks",
            "icon": "media/icon.svg"
          }
        ]
      },
  
     
      "views": {
        "nexhacks26Container": [
          {
            "id": "nexhacks26.chatView",
            "name": "Chat",
            "type": "webview",
            "webviewOptions": {
              "retainContextWhenHidden": true
            }
          }
        ]
      }
    },
  
   
    "scripts": {
     
      "compile": "tsc -p .",
  
      "watch": "tsc -watch -p .",
  
     
      "vscode:prepublish": "npm run compile"
    },
  
    
    "devDependencies": {
      "@types/node": "^20.11.30",
      "@types/vscode": "^1.85.0",
      "typescript": "^5.5.4"
    }
  }
  